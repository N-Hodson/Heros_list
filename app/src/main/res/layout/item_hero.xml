<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_heroItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_heroItem_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The potato can read your Mind"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/textview_heroItem_ranking"
        app:layout_constraintTop_toBottomOf="@+id/textview_heroItem_name" />

    <TextView
        android:id="@+id/textview_heroItem_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="#673AB7"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textview_heroItem_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_heroItem_name" />

    <TextView
        android:id="@+id/textview_heroItem_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The Potato"
        android:textColor="#00BCD4"
        android:textSize="26sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview_heroItem_ranking"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>